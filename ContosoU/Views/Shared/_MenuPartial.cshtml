
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Students
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a asp-controller="Student" asp-action="Index">Students</a></li>
                <li><a asp-controller="Course" asp-action="Index">Courses</a></li>
                <li><a asp-controller="Enrollment" asp-action="Index">Enrollments</a></li>
                <li><a asp-controller="Student" asp-action="Stats">Stat Report</a></li>
            </ul>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Faculty &amp; Staff
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a asp-area="" asp-controller="Instructor" asp-action="Index">Instructors</a></li>
                <li><a asp-controller="Department" asp-action="Index">Departments</a></li>
            </ul>
        </li>
    }
    else if (User.IsInRole("student"))
    {
        <li><a asp-controller="StudentEnrollment" asp-action="Index">Your Courses</a></li>

    }
    else if (User.IsInRole("instructor"))
    {
        <li><a asp-controller="InstructorCourses" asp-action="Index">Your Courses</a></li>

    }
}
else
{
    @* All users *@
    <li><a asp-controller="Course" asp-action="Listing">Our Courses</a></li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Contact <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a asp-controller="Home" asp-action="Index">Our Locations</a></li>
            <li><a asp-controller="Home" asp-action="Index">Request Information</a></li>
        </ul>
    </li>
}





